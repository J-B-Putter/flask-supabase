{% extends 'pages/base.jinja' %}

{% block title %} Home {% endblock %}

{% block content %} 
        <section id="hero">  
        <h1>
            Item Sale
        </h1>
    </section>
    <section id="things">
        {% for thing in things %}
            <article>

                <header>
                    {{ thing["name"] }}
                </header>
                    <p>                   
                     Cost: ${{ thing["cost"] }}
                    </p>
                    <p>                    
                    Description: {{ thing["description"] }}
                    </p>

                <footer>
                    <a href="/thing/{{ thing["id"] }}">More...</a>

                    <a href="/delete/{{ thing["id"] }}">Delete</a>
                </footer>

            </article>
        {% endfor %}
    </section>
{% endblock %}